<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>

<?import javafx.scene.control.Label?>

<?import javafx.scene.image.Image?>

<?import javafx.scene.image.ImageView?>

<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.layout.Pane?>

<?import javafx.scene.layout.StackPane?>

<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #F5F7FA;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.DashboardController">
    <children>
        <!-- Logo -->
        <ImageView fitHeight="100.0" fitWidth="100.0" layoutX="250.0" layoutY="20.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../../../Cozify%20Logo%20with%20Cozy%20House%20Silhouette.png"/>
            </image>
        </ImageView>

    <!-- Welcome Pane -->
    <StackPane layoutX="150.0" layoutY="140.0" prefHeight="200.0" prefWidth="300.0" style="-fx-background-color: #FFFF; -fx-border-color: #D0D7DF; -fx-border-radius: 20; -fx-background-radius: 20;">
        <children>
            <Pane prefHeight="200.0" prefWidth="300.0">
                <children>
                    <Label fx:id="welcomeLabel" layoutX="30.0" layoutY="50.0" prefWidth="240.0" style="-fx-font-size: 20px; -fx-text-fill: #1e567d;" text="Selamat datang!" />
                    <Button fx:id="logoutButton" layoutX="100.0" layoutY="120.0" prefHeight="30.0" prefWidth="100.0" text="Logout" style="-fx-background-color: #FF4C4C; -fx-text-fill: white;" onAction="#handleLogout"/>
                </children>
            </Pane>
        </children>
    </StackPane>
</children>

</AnchorPane>
